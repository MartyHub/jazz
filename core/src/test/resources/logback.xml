<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <File>test.log</File>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-5p] %-40.40c{1} - %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="file"/>
    </root>

</configuration>
